<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Edit Career | Investigo</title>
    <link rel="apple-touch-icon" href="/app-assets/images/favicon/apple-touch-icon-152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="/app-assets/images/logo/favicon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/flag-icon/css/flag-icon.min.css">
    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/materialize.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/style.css">
    <!-- END: Page Level CSS-->
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">
    <%- include('_layouts/sidenavbar') %>

    <!-- BEGIN: Page Main-->
    <div id="main">
        <div class="row">
            <div id="breadcrumbs-wrapper" data-image="/app-assets/images/gallery/breadcrumb-bg.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 l6">
                            <h5 class="breadcrumbs-title mt-0 mb-0"><span>Edit Career</span></h5>
                        </div>
                        <div class="col s12 m6 l6 right-align-md">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item"><a href="/admin/cms/career">Career</a></li>
                                <li class="breadcrumb-item active">Edit Career</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="container">
                    <div class="section">
                        <div class="row">
                            <div class="col s12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="row">
                                            <div class="col s12">
                                                <!-- errors -->
                                                <%- messages('messages', locals) %>
                                                <form method="POST" onsubmit="validate()" action="/admin/cms/career/edit/<%= career.id %>" id="form">
                                                    <div class="input-field col m4 s12">
                                                        <select id="cat" name="category">
                                                            <option value="" <%= career.category == '' ? 'selected' : '' %>>Select category</option>
                                                            <option value="Sales" <%= career.category == 'Sales' ? 'selected' : '' %>>Sales</option>
                                                            <option value="Business" <%= career.category == 'Business' ? 'selected' : '' %>>Business</option>
                                                            <option value="Marketing" <%= career.category == 'Marketing' ? 'selected' : '' %>>Marketing</option>
                                                            <option value="Engineering" <%= career.category == 'Engineering' ? 'selected' : '' %>>Engineering</option>
                                                            <option value="Design" <%= career.category == 'Design' ? 'selected' : '' %>>Design</option>
                                                        </select>
                                                        <label>Select category</label>
                                                        <small>
                                                            <div id="catErr" class="error"></div>
                                                        </small>
                                                    </div>
                                                    <div class="input-field col m4 s12">
                                                        <select id="loc" name="location">
                                                            <option value="" <%= career.location == '' ? 'selected' : '' %>>Select location</option>
                                                            <option value="Remote" <%= career.location == 'Remote' ? 'selected' : '' %>>Remote</option>
                                                            <option value="Office" <%= career.location == 'Office' ? 'selected' : '' %>>Office</option>
                                                        </select>
                                                        <label>Select location</label>
                                                        <small>
                                                            <div id="locErr" class="error"></div>
                                                        </small>
                                                    </div>
                                                    <div class="input-field col m4 s12">
                                                        <select id="type" name="type">
                                                            <option value="" <%= career.type == '' ? 'selected' : '' %>>Select type</option>
                                                            <option value="Full Time" <%= career.type == 'Full Time' ? 'selected' : '' %>>Full Time</option>
                                                            <option value="Part Time" <%= career.type == 'Part Time' ? 'selected' : '' %>>Part Time</option>
                                                        </select>
                                                        <label>Select type</label>
                                                        <small>
                                                            <div id="typeErr" class="error"></div>
                                                        </small>
                                                    </div>

                                                    <h4 class="card-title">English</h4>
                                                    <div class="input-field col s12">
                                                        <input placeholder="Title" id="EnTitle" name="EnTitle" type="text" value="<%= career.en.title %>">
                                                        <label for="EnTitle">Title</label>
                                                        <small>
                                                            <div id="EnTitleErr" class="error"></div>
                                                        </small>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        <textarea class="materialize-textarea" placeholder="description" id="EnDesc" name="EnDescription"><%= career.en.description %></textarea>
                                                        <small>
                                                            <div id="EnDescErr" class="error"></div>
                                                        </small>
                                                        <label for="EnDesc">Description</label>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Responsibilities
                                                        <textarea name="EnRes" class="form-control ta" id="ta1" cols="30" rows="10"><%= career.en.responsibilities %></textarea>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Requirements
                                                        <textarea name="EnReq" class="form-control ta" id="ta2" cols="30" rows="10"><%= career.en.requirements %></textarea>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Benefits
                                                        <textarea name="EnBen" class="form-control ta" id="ta3" cols="30" rows="10"><%= career.en.benefits %></textarea>
                                                    </div>

                                                    <h4 class="card-title">French</h4>
                                                    <div class="input-field col s12">
                                                        <input placeholder="Title" id="FrTitle" name="FrTitle" type="text" value="<%= career.fr.title %>">
                                                        <label for="FrTitle">Title</label>
                                                        <small>
                                                            <div id="FrTitleErr" class="error"></div>
                                                        </small>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        <textarea class="materialize-textarea" placeholder="description" id="FrDesc" name="FrDescription"><%= career.fr.description %></textarea>
                                                        <small>
                                                            <div id="FrDescErr" class="error"></div>
                                                        </small>
                                                        <label for="FrDesc">Description</label>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Responsibilities
                                                        <textarea name="FrRes" class="form-control ta" id="ta4" cols="30" rows="10"><%= career.fr.responsibilities %></textarea>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Requirements
                                                        <textarea name="FrReq" class="form-control ta" id="ta5" cols="30" rows="10"><%= career.fr.requirements %></textarea>
                                                    </div>
                                                    <div class="input-field col s12">
                                                        Benefits
                                                        <textarea name="FrBen" class="form-control ta" id="ta6" cols="30" rows="10"><%= career.fr.benefits %></textarea>
                                                    </div>

                                                    <button type="submit" class="btn purple mt-1" id="submitBtn">Submit</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-overlay"></div>
            </div>
        </div>
    </div>
    <!-- END: Page Main-->

    <script>
        const formC = document.getElementById('form');

        formC.addEventListener('submit', (e) => {
            e.preventDefault();
        })

        function validate() {
            let returnVal = true;

            const EnTitleValue = document.getElementById('EnTitle').value.trim();
            const EnDescValue = document.getElementById('EnDesc').value.trim();
            const FrTitleValue = document.getElementById('FrTitle').value.trim();
            const FrDescValue = document.getElementById('FrDesc').value.trim();
            const catValue = document.getElementById('cat').value.trim();
            const locValue = document.getElementById('loc').value.trim();
            const typeValue = document.getElementById('type').value.trim();

            if (EnTitleValue == '') {
                document.getElementById('EnTitleErr').innerText = 'Please enter title.';
                returnVal = false;
            } else {
                document.getElementById('EnTitleErr').innerText = '';
            }

            if (EnDescValue == '') {
                document.getElementById('EnDescErr').innerText = 'Please enter description.';
                returnVal = false;
            } else {
                document.getElementById('EnDescErr').innerText = '';
            }

            if (FrTitleValue == '') {
                document.getElementById('FrTitleErr').innerText = 'Please enter title.';
                returnVal = false;
            } else {
                document.getElementById('FrTitleErr').innerText = '';
            }

            if (FrDescValue == '') {
                document.getElementById('FrDescErr').innerText = 'Please enter description.';
                returnVal = false;
            } else {
                document.getElementById('FrDescErr').innerText = '';
            }

            if (catValue == '') {
                document.getElementById('catErr').innerText = 'Please select category.';
                returnVal = false;
            } else {
                document.getElementById('catErr').innerText = '';
            }

            if (locValue == '') {
                document.getElementById('locErr').innerText = 'Please select location.';
                returnVal = false;
            } else {
                document.getElementById('locErr').innerText = '';
            }

            if (typeValue == '') {
                document.getElementById('typeErr').innerText = 'Please select type.';
                returnVal = false;
            } else {
                document.getElementById('typeErr').innerText = '';
            }

            if (returnVal) {
                document.getElementById('submitBtn').disabled = true;
                formC.submit();
            }
        }
    </script>
    <!-- BEGIN VENDOR JS-->
    <script src="/app-assets/js/vendors.min.js"></script>
    <!-- BEGIN VENDOR JS-->
    <!-- BEGIN THEME  JS-->
    <script src="/app-assets/js/plugins.js"></script>
    <script src="/app-assets/js/scripts/ui-alerts.js"></script>
    <!-- END THEME  JS-->
    <!-- ===== ckeditor JavaScript ===== -->
    <script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
    <script>
        $(function() {
            const elements = $('textarea.ta').get();
            Object.keys(elements).forEach(i => {
                CKEDITOR.replace(elements[i].id, {
                    filebrowserUploadUrl: '/admin/blog/upload',
                    format_tags: 'p;h1;h2;h3;h4;h5;h6'
                });
            });

            if ($("[data-fancybox]").length) {
                $("[data-fancybox]").fancybox();
            }
        });
    </script>
</body>
<%- include('_layouts/alert') %>

</html>