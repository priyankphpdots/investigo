<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Profile | Investigo</title>
    <link rel="apple-touch-icon" href="/app-assets/images/favicon/apple-touch-icon-152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="/app-assets/images/logo/favicon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/vendors.min.css">
    <!-- <link rel="stylesheet" type="text/css" href="/app-assets/vendors/flag-icon/css/flag-icon.min.css"> -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/materialize.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/style.css">
    <!-- END: Page Level CSS-->
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">
    <%- include('_layouts/sidenavbar') %>

        <!-- BEGIN: Page Main-->
        <div id="main">
            <div class="row">
                <div id="breadcrumbs-wrapper" data-image="/app-assets/images/gallery/breadcrumb-bg.jpg">
                    <div class="container">
                        <div class="row">
                            <div class="col s12 m6 l6">
                                <h5 class="breadcrumbs-title mt-0 mb-0"><span>Profile</span></h5>
                            </div>
                            <div class="col s12 m6 l6 right-align-md">
                                <ol class="breadcrumbs mb-0">
                                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                    <li class="breadcrumb-item active">Profile</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12">
                    <div class="container">
                        <div class="section section-data-tables">
                            <div class="row">
                                <div class="col s12">
                                    <div class="card">
                                        <div class="card-content">
                                            <!-- errors -->
                                            <%- messages('messages', locals) %>
                                            <div class="row">
                                                <div class="col s12">
                                                    <!-- <h4 class="card-title">Contact Us</h4> -->
                                                        <form method="POST" onsubmit="validate()" action="/admin/profile" id="form" enctype="multipart/form-data">
                                                            <div class="input-field col m4 s12">
                                                                <!-- Upload Avatar -->
                                                                <input type="file" name="image" id="input-file-now" class="dropify" data-disable-remove="true" data-height="240" data-default-file="<%= admin.image %>" />
                                                                <small><div id="error1" class="error"></div></small>
                                                            </div>
                                                            <div class="input-field col m8 s12">
                                                                <input placeholder="Name" id="name" name="name" type="text" value="<%= admin.name %>">
                                                                <small><div id="error2" class="error"></div></small>
                                                                <label for="name">You name</label>
                                                            </div>
                                                            <div class="input-field col m4 s12">
                                                                <input placeholder="Facebook" id="facebook" name="facebook" type="text" value="<%= admin.facebook %>">
                                                                <small><div id="error3" class="error"></div></small>
                                                                <label for="facebook">Facebook</label>
                                                            </div>
                                                            <div class="input-field col m4 s12">
                                                                <input placeholder="Twitter" id="twitter" name="twitter" type="text" value="<%= admin.twitter %>">
                                                                <small><div id="error4" class="error"></div></small>
                                                                <label for="twitter">Twitter</label>
                                                            </div>
                                                            <div class="input-field col m4 s12">
                                                                <input placeholder="Instagram" id="instagram" name="instagram" type="text" value="<%= admin.instagram %>">
                                                                <small><div id="error5" class="error"></div></small>
                                                                <label for="instagram">Instagram</label>
                                                            </div>
                                                            <div class="input-field col m4 s12">
                                                                <input placeholder="LinkedIn" id="linkedin" name="linkedin" type="text" value="<%= admin.linkedin %>">
                                                                <small><div id="error6" class="error"></div></small>
                                                                <label for="linkedin">LinkedIn</label>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <input placeholder="Phone no." id="phone" name="phone" type="text" value="<%= admin.phone %>">
                                                                <small><div id="error7" class="error"></div></small>
                                                                <label for="phone">Phone</label>
                                                            </div>
                                                            <div class="input-field col m6 s12">
                                                                <input placeholder="Address" id="address" name="address" type="text" value="<%= admin.address %>">
                                                                <small><div id="error8" class="error"></div></small>
                                                                <label for="address">Address</label>
                                                            </div>
                                                            <div class="input-field col mt-1 s12">
                                                                <button type="submit" class="btn purple" id="submitBtn" style="margin-right: 10px;">Submit</button>
                                                                <a onclick="history.back()" class="btn">Cancel</a>
                                                            </div>
                                                        </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-overlay"></div>
                </div>
            </div>
        </div>
        <!-- END: Page Main-->

        <script>
            const formC = document.getElementById('form');
            const name = document.getElementById('name');

            formC.addEventListener('submit', (e) => {
                e.preventDefault();
            })
            function validate() {
                let returnVal = true;

                const nameVal = name.value.trim();
                const filevalue = document.getElementById('input-file-now').value;
                const ext = filevalue.substring(filevalue.lastIndexOf('.') + 1);

                if (filevalue == '') {
                    document.getElementById('error1').innerText = '';
                } else if (ext == 'png' || ext == 'jpeg' || ext == 'jpg') {
                    document.getElementById('error1').innerText = '';
                } else {
                    document.getElementById('error1').innerText = 'Wrong file type.';
                    returnVal = false;
                }

                if (nameVal == '') {
                    document.getElementById('error2').innerText = 'Please enter you name.';
                    returnVal = false;
                } else {
                    document.getElementById('error2').innerText = '';
                }

                if (returnVal) {
                    document.getElementById('submitBtn').disabled = true;
                    formC.submit();
                }
            }

        </script>
        <!-- BEGIN VENDOR JS-->
        <script src="/app-assets/js/vendors.min.js"></script>
        <!-- BEGIN VENDOR JS-->
        <!-- BEGIN THEME  JS-->
        <script src="/app-assets/js/plugins.js"></script>
        <script src="/app-assets/js/scripts/ui-alerts.js"></script>
        <!-- END THEME  JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
        <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>
</body>
<%- include('_layouts/alert') %>
</html>