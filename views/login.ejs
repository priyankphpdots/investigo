<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Login | Investigo</title>
    <link rel="apple-touch-icon" href="/app-assets/images/favicon/apple-touch-icon-152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="/app-assets/images/logo/favicon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/vendors.min.css">
    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/materialize.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/themes/vertical-dark-menu-template/style.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/pages/login.css">
    <!-- END: Page Level CSS-->
</head>
 <!-- END:  -->
<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 1-column login-bg blank-page blank-page" data-open="click" data-menu="vertical-dark-menu" data-col="1-column">
    <div class="row">
        <div class="col s12">
            <div class="container">
                <div id="login-page" class="row">
                    <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                        <form class="login-form" id="loginform" action="/admin/login" method="post" onsubmit="return validate()">
                            <div class="row">
                                <div class="input-field col s12">
                                    <h5 class="ml-4">Sign in</h5>
                                </div>
                            </div>
                            <!-- messages -->
                            <%- messages('messages', locals) %>
                           
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">person_outline</i>
                                    <input id="email" type="text" name="email">
                                    <label for="email" class="center-align">Email</label>
                                    <small><div id="error1" class="error" style="margin-left: 3rem;"></div></small>
                                </div>
                            </div>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">lock_outline</i>
                                    <input id="pass" type="password" name="password">
                                    <label for="pass">Password</label>
                                    <small><div id="error2" class="error" style="margin-left: 3rem;"></div></small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" id="submitBtn">Log In</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="content-overlay"></div>
        </div>
    </div>

    <script>
        const form = document.getElementById('loginform');
        
        // form
        form.addEventListener('submit', (e) => {
            e.preventDefault();
        })
        function validate() {
            let returnVal = true;

            const email = document.getElementById('email');
            const password = document.getElementById('pass');

            const emailValue = email.value.trim();
            const passwordValue = password.value.trim();

            if (emailValue == '') {
                document.getElementById('error1').innerText = 'Please enter email.';
                returnVal = false;
            } else if (!validateEmail(emailValue)) {
                document.getElementById('error1').innerText = 'Please enter valid email.';
                returnVal = false;
            } else {
                document.getElementById('error1').innerText = '';
            }

            if (passwordValue == '') {
                document.getElementById('error2').innerText = 'Please enter password.';
                returnVal = false;
            } else if (passwordValue.length < 6) {
                document.getElementById('error2').innerText = 'Password should atleast 6 characters long.';
                returnVal = false;
            } else {
                document.getElementById('error2').innerText = '';
            }

            if (returnVal) {
                document.getElementById('submitBtn').disabled = true;
                form.submit();
            }
        }

        function validateEmail(email) {
            return email.match(
                /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
        }
    </script>

    <!-- BEGIN VENDOR JS-->
    <script src="/app-assets/js/vendors.min.js"></script>
    <!-- BEGIN VENDOR JS-->
    <!-- BEGIN THEME  JS-->
    <script src="/app-assets/js/plugins.js"></script>
    <script src="/app-assets/js/scripts/ui-alerts.js"></script>
    <!-- END THEME  JS-->
</body>

</html>